<button
  class="bg-gray-500 hover:text-gray-900 hover:bg-gray-200 text-gray-50 transition-colors p-4 rounded-full cursor-pointer block go-back-button"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    class="size-6"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M9 15 3 9m0 0 6-6M3 9h12a6 6 0 0 1 0 12h-3"></path>
  </svg>
</button>

<script>
  document.querySelectorAll(".go-back-button").forEach((button) => {
    button.addEventListener('click', () => {
      history.back();
    });
  });
</script>
